{
  "application": {
    "name": "Text-to-SQL POC",
    "version": "1.0.0",
    "environment": "development"
  },
  "flask": {
    "debug": true,
    "port": 5000,
    "host": "0.0.0.0",
    "cors_origins": ["http://localhost:5173"]
  },
  "claude": {
    "api_key": "${ANTHROPIC_API_KEY}",
    "model": "claude-sonnet-4-5-20250929",
    "max_tokens": 1000,
    "timeout": 10
  },
  "query_execution": {
    "max_results": 1000,
    "timeout": 30
  },
  "active_dataset": "em_market",
  "datasets": {
    "sales": {
      "id": "sales",
      "name": "Sales Transactions",
      "db_path": "data/text_to_sql_poc.db",
      "description": "Retail sales demonstration data",
      "client_isolation": {
        "enabled": true,
        "method": "row-level",
        "filter_field": "client_id",
        "description": "Row-level client_id filtering on fact tables"
      }
    },
    "market_size": {
      "id": "market_size",
      "name": "Market Size Analytics",
      "db_path": "data/market_size.db",
      "description": "Market size tracking and forecast data",
      "client_isolation": {
        "enabled": true,
        "method": "row-level",
        "filter_field": "client_id",
        "description": "Row-level client_id filtering on fact tables"
      }
    },
    "em_market": {
      "id": "em_market",
      "name": "EM Market - FMCG/CPG Analytics",
      "db_path": "data/em_market/em_market.db",
      "description": "Global market research data for consumer goods",
      "client_isolation": {
        "enabled": true,
        "method": "brand-hierarchy",
        "filter_field": "corp_id",
        "filter_table": "Dim_Brand",
        "description": "Corporation-based isolation through brand hierarchy (Dim_Corporation â†’ Dim_Brand)"
      },
      "clients": {
        "table_name": "Dim_Corporation",
        "id_field": "corp_id",
        "name_field": "corp_name"
      }
    }
  }
}
